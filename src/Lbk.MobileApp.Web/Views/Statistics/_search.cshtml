@using Lbk.MobileApp.Domain.Resources
@model Lbk.MobileApp.Web.Models.StatisticsSearchFormModel
<script src="@Url.Content("~/Scripts/EditorHookup.js")" type="text/javascript"></script>
<div id="searchRegion">
    @using (Ajax.BeginForm("Index", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "resultGrid" }))
    {
        @Html.AntiForgeryToken()
        <fieldset>
            <legend></legend>
            <div style="vertical-align: middle; margin-top: 0.80em;">
                <div style="float: left;">
                    <div>
                        @this.Html.LabelFor(m => m.StartDate)
                    </div>
                    <div>
                        @*<input type="text" id="description" name="Description" value="@Model.SearchItem.StartDate" />*@
                        @*@this.Html.TextBox("StartDate", @Model.StartDate, new { @class = "date2"})*@
                        @this.Html.EditorFor(m => m.StartDate)
                        <div>@this.Html.ValidationMessageFor(m => m.StartDate)</div>
                    </div>
                </div>
                <div style="float: left; margin-left: 0.80em;">
                    <div>
                        @this.Html.LabelFor(m => m.EndDate)
                    </div>
                    <div style="float: left;">
                         @this.Html.EditorFor(m => m.EndDate)
                         <div>@this.Html.ValidationMessageFor(m => m.EndDate)</div>
                        @*<input type="text" id="date" name="Date" value="@string.Format("{0:d}", @Model.SearchItem.EndDate)" class="date" />*@
                    </div>
                </div>
                <div style="height: 1.80em; float: left; font-size: 0.80em; margin-top: 1.1em; margin-left: 0.80em;">
                    <input type="submit" name="btnSubmit" value="Anzeigen" />
                </div>
            </div>
        </fieldset>
    }
</div>

