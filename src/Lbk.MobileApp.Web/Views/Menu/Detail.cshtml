@using Lbk.MobileApp.Domain.Resources
@model Lbk.MobileApp.Web.Models.MenuFormModel
@{
    ViewBag.Title = string.Format("Menu - [{0} Menu]", Messages.Details);
}
<h2>
    @Messages.Details</h2>
<fieldset>
    <legend>@Messages.Menu @Messages.Details</legend>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Date)
    </div>
</fieldset>
<p>
    @Html.ActionLink(Messages.Edit, "Edit", new { id = Model.Id }) |
    @Html.ActionLink(Messages.BackToList, "List")
</p>
