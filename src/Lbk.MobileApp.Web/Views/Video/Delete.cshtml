        @Html.DisplayFor(model => model.Link)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.SortOrder)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SortOrder)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.ThumbnailLink)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ThumbnailLink)
    </div>
