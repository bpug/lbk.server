@model Lbk.MobileApp.Web.Models.AnswerFormModel
@{
    ViewBag.Title = "Quiz - [Detail Answer]";
}
<h2>
    Detail</h2>
<fieldset>
    <legend>Detail Answer</legend>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Explanation</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Explanation)
    </div>
    <div class="display-label">
        IsRight</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsRight)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "List", new { id = Model.QuestionId })
</p>
