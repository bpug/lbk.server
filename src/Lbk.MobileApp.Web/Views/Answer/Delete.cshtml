@model Lbk.MobileApp.Web.Models.AnswerFormModel
@{
    ViewBag.Title = "Quiz - [Delete Answer]";
}
<h2>
    Delete</h2>
<h3>
    Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Delete Answer</legend>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Explanation</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Explanation)
    </div>
    <div class="display-label">
        IsRight</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsRight)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.QuestionId)
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "List", new { id = Model.QuestionId })
    </p>
}
