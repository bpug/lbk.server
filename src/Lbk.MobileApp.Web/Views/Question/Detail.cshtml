@using Lbk.MobileApp.Domain.Resources
@model Lbk.MobileApp.Web.Models.QuestionFormModel
@{
    ViewBag.Title = string.Format("Quiz - [{0} {1}]", @Messages.Question, @Messages.Details);
}
<h2>
    @Messages.Details</h2>
<fieldset>
    <legend>Detail Question</legend>
    <div class="display-label">
         @Html.LabelFor(model => model.Category)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Category)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.Description)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
         @Html.LabelFor(model => model.Number)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Number)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.Points)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Points)
    </div>
</fieldset>
<p>
    @Html.ActionLink(Messages.Edit, "Edit", new { id = Model.Id }) |
    @Html.ActionLink(Messages.BackToList, "List", new { id = Model.SerieId })
</p>
