@model Lbk.MobileApp.Web.Models.QuestionFormModel
@{
    ViewBag.Title = "Quiz - [Delete Question]";
}
<h2>
    Delete</h2>
<h3>
    Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Delete Question</legend>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Number</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Number)
    </div>
    <div class="display-label">
        Points</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Points)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.SerieId)
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "List", new { id = Model.SerieId })
    </p>
}
