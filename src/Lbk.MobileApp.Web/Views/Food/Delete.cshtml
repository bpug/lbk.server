@model Lbk.MobileApp.Web.Models.FoodFormModel
@{
    ViewBag.Title = "Menu - [Delete Food]";
}
<h2>
    Delete</h2>
<h3>
    Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Delete Food</legend>
    <div class="display-label">
        Category</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CategoryName)
    </div>
    <div class="display-label">
        Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        Price</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Price)
    </div>
    <div class="display-label">
        SortOrder</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.SortOrder)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.MenuId)
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "List", new { id = Model.MenuId })
    </p>
}
