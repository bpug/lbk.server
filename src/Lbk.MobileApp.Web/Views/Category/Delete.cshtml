@model Lbk.MobileApp.Web.Models.CategoryFormModel
@{
    ViewBag.Title = "Menu - [Delete Category]";
}
<h2>
    Delete</h2>
<h3>
    Are you sure you want to delete this?<br />
    All assigned foods also deleted!</h3>
<fieldset>
    <legend>Delete Category</legend>
    <div class="display-label">
        Title</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    @Html.Hidden("MenuId", (object)ViewBag.MenuId)
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "List", new { MenuId = (object)ViewBag.MenuId })
    </p>
}
