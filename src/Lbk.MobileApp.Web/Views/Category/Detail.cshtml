@model Lbk.MobileApp.Web.Models.CategoryFormModel
@{
    ViewBag.Title = "Menu - [Detail Category]";
}
<h2>
    Detail</h2>
<fieldset>
    <legend>Detail Category</legend>
    <div class="display-label">
        Date</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>
    <div class="display-label">
        Description</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
</fieldset>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id, MenuId = (object)ViewBag.MenuId })
    |
    @Html.ActionLink("Back to List", "List", new { MenuId = (object)ViewBag.MenuId })
</p>
