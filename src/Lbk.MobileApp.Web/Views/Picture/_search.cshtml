@model Lbk.MobileApp.Web.Models.GenericListViewModel<Lbk.MobileApp.Model.Picture, Lbk.MobileApp.Web.Models.PictureSearchFormModel>
<script src="@Url.Content("~/Scripts/EditorHookup.js")" type="text/javascript"></script>
<div id="searchRegion">
    @using (Ajax.BeginForm("List", new AjaxOptions { InsertionMode = InsertionMode.Replace, UpdateTargetId = "mainSearch" }))
    {
        <fieldset>
            <legend>Search</legend>
            <div style="vertical-align: middle; margin-top: 0.80em;">
               <div style="float: left; margin-left: 0.80em;">
                    <div>
                        Description
                    </div>
                    <div>
                        <input type="text" id="description" name="Description" value="@Model.SearchItem.Description" />
                    </div>
                </div>
                <div style="float: left; margin-left: 0.80em;">
                    <div>
                        FileName
                    </div>
                    <div>
                        <input type="text" id="fileName" name="FileName" value="@Model.SearchItem.FileName" />
                    </div>
                </div>
                <div style="float: left; margin-left: 0.80em;">
                    <div>
                        Link
                    </div>
                    <div>
                        <input type="text" id="link" name="Link" value="@Model.SearchItem.Link" />
                    </div>
                </div>
                <div style="height: 1.80em; float: left; font-size: 0.80em; margin-top: 1.1em; margin-left: 0.80em;">
                    <input type="submit" name="btnSubmit" value="Search" />
                    <input type="submit" name="btnSubmit" value="Clear" />
                </div>
            </div>
        </fieldset>
    }
</div>
<div id="resultGrid">
    @Html.Partial("_grid", Model.Results)
</div>
