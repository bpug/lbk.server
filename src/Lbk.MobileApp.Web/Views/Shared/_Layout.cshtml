@using Lbk.MobileApp.Web.Helpers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.7.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-2.0.6-development-only.js")" type="text/javascript"></script>
    <link href="@Url.Content("~/Content/themes/base/jquery-ui.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-ui-1.8.17.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/globalization/globalize.js")" type="text/javascript"></script>
    
    @Html.GlobalizationLink()
    @Html.MetaAcceptLanguage()
    <script src="@Url.Content("~/Scripts/common.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>
                    ip-connect Löwenbräukeller MobileApp</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LanguagePartial")
                @Html.Partial("_LogOnPartial")
            </div>
            <nav>
                <ul id="menu">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Menü", "List", "Menu")</li>
                    <li>@Html.ActionLink("Quiz", "List", "Serie")</li>
                    <li>@Html.ActionLink("Veranstaltungen", "List", "Event")</li>
                    <li>@Html.ActionLink("Bilder", "List", "Picture")</li>
                    <li>@Html.ActionLink("Videos", "List", "Video")</li>
                    <li>@Html.ActionLink("Speisekarte", "Detail", "Speisekarte")</li>
                    @*<li>@Html.ActionLink("Booking", "Index", "Booking")</li>*@
                    <li>@Html.ActionLink("Statistik", "Index", "Statistics")</li>
                    <li>@Html.ActionLink("Über", "About", "Home")</li>
                </ul>
            </nav>
        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
            @Lbk.MobileApp.Web.Extensions.AppInfoExtensions.GetApplicationSemanticVersion()
        </footer>
    </div>
</body>
</html>
