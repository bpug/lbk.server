@using Lbk.MobileApp.Domain.Resources
@model Lbk.MobileApp.Web.Models.EventFormModel
@{
    ViewBag.Title = string.Format("{0} - [{0} {1} ]", Messages.Event, Messages.Delete);
}
<h2>
    @Messages.Delete</h2>
<h3>
    @Messages.DeleteSecurityQuestion</h3>
<fieldset>
    <legend>@Messages.Event @Messages.Delete</legend>
    <div class="display-label">
        @Html.LabelFor(model => model.Title)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Title)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.Description)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Description)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.Date)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Date)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.DateOrder)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.DateOrder)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.ActivatedAt)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ActivatedAt)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.ExpiresAt)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ExpiresAt)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.IsActivated)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.IsActivated)
    </div>
    <div class="display-label">
       @Html.LabelFor(model => model.ReservationLink)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ReservationLink)
    </div>
    <div class="display-label">
        @Html.LabelFor(model => model.ThumbnailLink)</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.ThumbnailLink)
    </div>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value=@Messages.Delete />
        |
        @Html.ActionLink(Messages.BackToList, "List")
    </p>
}
